MF=	Makefile-linux

#Use default mpi
FC=	mpif90

FFLAGS=	-O3
LFLAGS=

EXE=	olapmpi

SRC= \
	olapmpi.f90 \
	olapcomms.f90 \
        olapparams.f90 \
        benchclock.f90

#
# No need to edit below this line
#

.SUFFIXES:
.SUFFIXES: .f90 .o

OBJ=	$(SRC:.f90=.o)

.f90.o:
	$(FC) $(FFLAGS) -c $<

all:	$(EXE)

$(EXE):	$(OBJ)
	$(FC) $(FFLAGS) -o $@ $(OBJ) $(LFLAGS)

$(OBJ):	$(MF)

olapmpi.o:	olapparams.o olapcomms.o benchclock.o
olapcomms.o:	olapparams.o

clean:
	rm -f $(OBJ) $(EXE) core *.mod *.MOD
